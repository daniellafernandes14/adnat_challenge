<h1>Adnat</h1>

<p>Logged in as <%= current_user.name %> <%= link_to "Log Out", destroy_user_session_path, method: :delete %> <%= link_to 'Home', organisations_path %></p>

<h1>Edit Organisation</h1>

<%= simple_form_for(@organisation) do |f| %>
  <%= f.input :name %>
  <%= f.input :hourly_rate %>
  <%= f.submit value: 'Update' %>
<% end %>

<%= link_to "Delete", organisation_path(@organisation), method: :delete, data: { confirm: "Are you sure?" } %>
